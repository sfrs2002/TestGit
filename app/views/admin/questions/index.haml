- content_for :head do
  = javascript_include_tag "pages/admin/questions-bundle"
  = stylesheet_link_tag "pages/admin/questions-bundle", :media => "all"
= form_tag("/admin/questions", method: "get") do
  %p
    = label_tag :structure, "课本/章节"
    = select_tag :books, options_from_collection_for_select(@books, "id", "name"), :prompt => "请选择"
    = select_tag :chapters, nil, :prompt => "请选择"
    = select_tag :sections, nil, :prompt => "请选择"
    = select_tag :subsections, nil, :prompt => "请选择"
    = label_tag :search, "标签/内容"
    = text_field_tag :search
    = submit_tag "search"


.left
  #q_list
    - @questions.each do |q|
      = render partial: "question/question", locals: { q: q }

.middle
  = button_to "添加 >>", "javascript:void(0);", id: "add"
  = button_to "移除 <<", "javascript:void(0);", id: "remove"

.right
  #selected_q_list
  = button_to "分为一组", "javascript:void(0);", id: "group"

= text_field_tag :data, @questions.to_json, class: "hide"
