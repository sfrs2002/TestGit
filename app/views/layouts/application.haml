%html
  %head
    %title MathLib
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = yield :app_head
    = csrf_meta_tags
  %body
    = yield :app_nav
    .container
      - flash.each do |name, msg|
        %div{:class => "alert alert-#{ name == :notice ? "success" : "error" }"}
          %button{type: "button", class: "close", "data-dismiss" => "alert"} &times;
          = msg
    = yield :app_content
